source ~/.bash_aliases

# Icons in Terminal
source ~/.local/share/icons-in-terminal/icons_bash.sh

#CUSTOM_PROMPT PS1
source ~/.prompt

#PIPENV COMPLETE
if [ -f ~/.pipenv_complete ]; then
    source ~/.pipenv_complete
elif [ -x "$(command -v pipenv)" ]; then
     pipenv --completion > ~/.pipenv_complete
     source ~/.pipenv_complete
fi

# This make available dbus for system units defined by user, me!
systemctl --user import-environment DBUS_SESSION_BUS_ADDRESS

#FZF
if [ -f ~/.fzf.bash ]; then
    source ~/.fzf.bash
fi

